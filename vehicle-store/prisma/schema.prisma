generator client {
  provider   = "prisma-client-js"
  engineType = ""
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:senai@localhost:5432/exemplo-prisma?schema=public"
}

model Usuario {
  id    String  @id
  name  String
  email String? @unique
  senha String

  @@map("usuario")
}

model Produto {
  id           String   @id
  name         String
  category     String
  manufacturer String
  amount       Int
  updatedAt    DateTime
  createdAt    DateTime

  @@map("produto")
}
